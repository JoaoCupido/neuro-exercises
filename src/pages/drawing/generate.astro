---
import Layout from '../../layouts/Layout.astro';
import FormInput from '../../components/FormInput.astro';
import BackgroundInputs from '../../components/BackgroundInputs.astro';
import GridInputs from '../../components/GridInputs.astro';
---

<Layout title="Generate Drawing URL - Neuro Exercises">
    <main class="min-h-screen bg-background py-12 px-4 sm:px-6 lg:px-8">
        <div class="min-h-screen mx-auto max-w-4xl">
            <h1 class="text-4xl font-bold text-foreground mb-2">Generate Drawing URL</h1>
            <p class="text-muted-foreground mb-8">Configure your drawing canvas and generate a shareable URL</p>

            <div class="bg-card border border-border rounded-lg p-6 mb-8">
                <form id="urlForm" class="space-y-6">
                    <!-- Colors Section -->
                    <div>
                        <h3 class="text-lg font-semibold text-foreground mb-4">
                            General Controls
                        </h3>

                        <FormInput
                                id="sizeInput"
                                label="Brush Size (1-50)"
                                type="number"
                                value="5"
                                min="1"
                                max="50"
                                className="mb-4"
                        />

                        <label class="block text-sm font-medium text-foreground mb-2">
                            Available Colors
                        </label>
                        <div class="space-y-2">
                            <label class="flex items-center gap-2">
                                <input type="radio" name="colorMode" value="all" checked class="text-primary" />
                                <span class="text-foreground">All default colors (*)</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="radio" name="colorMode" value="custom" class="text-primary" />
                                <span class="text-foreground">Custom colors</span>
                            </label>
                        </div>
                        <FormInput
                                id="customColors"
                                type="text"
                                placeholder="#ff0000,#00ff00,#0000ff"
                                disabled={true}
                                note="Enter comma-separated hex colors"
                        />
                    </div>

                    <hr class="my-4 h-0.5 bg-border" />

                    <!-- Input Controls Section -->
                    <div class="">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Input Controls</h3>

                        <!-- Eraser Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="eraserInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Eraser Tool</span>
                            </label>
                        </div>

                        <!-- Cursor Size Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="cursorSizeInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Cursor Size Control</span>
                            </label>
                        </div>

                        <!-- Undo/Redo Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="undoRedoInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Undo/Redo Controls</span>
                            </label>
                        </div>

                        <!-- Background Inputs -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="backgroundInputsCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Background Controls</span>
                            </label>
                        </div>

                        <!-- Grid Inputs -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="gridInputsCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Grid Controls</span>
                            </label>
                        </div>
                    </div>

                    <hr class="my-4 h-0.5 bg-border" />

                    <!-- Hide Toolbar Option -->
                    <div class="">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Toolbar Settings</h3>

                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="hideToolbarCheck" class="text-primary" />
                                <span class="text-foreground font-medium">Hide Toolbar (minimal interface)</span>
                            </label>
                        </div>

                        <!-- Toolbar Position (only show if not hiding toolbar) -->
                        <div id="toolbarPositionGroup">
                            <label class="block text-sm font-medium text-foreground mb-2" for="toolbarPositionSelect">
                                Toolbar Position
                            </label>
                            <select
                                    id="toolbarPositionSelect"
                                    class="w-full px-4 py-2 bg-secondary border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                            >
                                <option value="up">Top</option>
                                <option value="down">Bottom</option>
                                <option value="left">Left</option>
                                <option value="right">Right</option>
                            </select>
                        </div>
                    </div>

                    <hr class="my-4 h-0.5 bg-border" />

                    <!-- Reusable Background Controls -->
                    <BackgroundInputs />

                    <hr class="my-4 h-0.5 bg-border" />

                    <!-- Reusable Grid Controls -->
                    <GridInputs />
                </form>
            </div>

            <!-- Add this after the form and before the Generated URL section -->
            <div class="bg-card border border-border rounded-lg p-6 mb-8">
                <h2 class="text-xl font-bold text-foreground mb-4">Import from URL</h2>

                <div class="space-y-4">
                    <div>
                        <label for="importUrlInput" class="block text-sm font-medium text-foreground mb-2">
                            Paste Drawing URL
                        </label>
                        <div class="flex gap-2">
                            <input
                                    type="text"
                                    id="importUrlInput"
                                    placeholder="https://example.com/drawing?brushSize=10&bgColor=%23f0f0f0&colors=*"
                                    class="flex-1 px-4 py-2 bg-secondary border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                            />
                            <button
                                    type="button"
                                    id="importBtn"
                                    class="px-6 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:opacity-90 transition-opacity whitespace-nowrap"
                            >
                                Import Settings
                            </button>
                        </div>
                    </div>

                    <div>
                        <label for="importParamInput" class="block text-sm font-medium text-foreground mb-2">
                            Or paste only parameters
                        </label>
                        <div class="flex gap-2">
                            <textarea
                                    id="importParamInput"
                                    placeholder="brushSize=10&bgColor=%23f0f0f0&colors=%23ff0000,%2300ff00,%230000ff"
                                    class="flex-1 h-20 px-4 py-2 bg-secondary border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary font-mono text-sm"
                            ></textarea>
                            <button
                                    type="button"
                                    id="importParamBtn"
                                    class="px-6 py-2 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-accent transition-colors whitespace-nowrap self-start"
                            >
                                Import
                            </button>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">
                            Paste just the query parameters (everything after the ?)
                        </p>
                    </div>
                </div>
            </div>

            <!-- Generated URL -->
            <div id="resultSection" class="bg-card border border-border rounded-lg p-6">
                <h2 class="text-xl font-bold text-foreground mb-4">Generated URL</h2>

                <div class="bg-secondary rounded-lg p-4 mb-4 overflow-x-auto">
                    <code id="generatedUrl" class="text-sm text-foreground break-all"></code>
                </div>

                <div class="flex gap-4">
                    <button
                            id="copyBtn"
                            class="px-6 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:opacity-90 transition-opacity"
                    >
                        Copy URL
                    </button>
                    <button
                            id="openBtn"
                            class="px-6 py-2 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-accent transition-colors"
                    >
                        Open Drawing
                    </button>
                </div>
            </div>
        </div>
    </main>

    <script>
        import { WebviewWindow } from "@tauri-apps/api/webviewWindow";

        async function safeIsTauri() {
            try {
                const { isTauri } = await import('@tauri-apps/api/core');
                return isTauri();
            } catch {
                return false; // Browser
            }
        }
        const windowTauri = await safeIsTauri();

        const openBtn = document.getElementById('openBtn');
        const generatedUrlEl = document.getElementById('generatedUrl');

        openBtn.addEventListener("click", (e) => {
            e.preventDefault();

            const url = generatedUrlEl.textContent.trim();
            if (!url) return;

            if (windowTauri) {
                // Generate a unique window label
                const label = `drawing-${Date.now()}`;

                // Create the new window
                const win = new WebviewWindow(label, {
                    url
                });

                // Optional: handle events
                win.once("tauri://created", () => {
                    console.log("Drawing window created");
                });
                win.once("tauri://error", (e) => {
                    console.error("Window creation error:", e);
                });
            } else {
                // Running in browser - open in new tab
                window.open(url, '_blank', 'noopener,noreferrer');
            }
        });
    </script>
    <script is:inline src={`${process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : ""}/scripts/DrawingGenerateScript.js`}></script>
</Layout>