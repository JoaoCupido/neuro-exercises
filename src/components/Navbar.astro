---
// components/Navbar.astro
import { Pencil, FileText, Zap, Link, Waypoints, Brain, ChevronDown, Menu, X, Home } from '@lucide/astro';
import { exercisesList } from '../data/Exercises';
---

<nav class="border-b border-border bg-card">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between md:justify-start w-full gap-8">
            <!-- Logo -->
            <div class="flex items-center gap-8">
                <a href={`${process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : ""}/`} class="text-xl font-bold text-primary flex items-center gap-2">
                    <Brain class="w-6 h-6" />
                    Neuro Exercises
                </a>
            </div>

            <!-- Navigation Menu -->
            <div class="hidden md:flex items-center gap-6">
                {exercisesList.map((ex) => (
                    <div class="relative group" id={ex.id}>
                        <button class="flex items-center gap-1 px-3 py-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-accent">
                            {ex.title}
                            <ChevronDown class="w-4 h-4 transition-transform group-hover:rotate-180" />
                        </button>
                        <div class="absolute top-full left-0 mt-1 w-48 bg-card border border-border rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-2">
                                <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot} class="flex items-center gap-2 px-4 py-2 text-sm text-foreground hover:bg-accent transition-colors">
                                    <ex.icon class="w-4 h-4" />
                                    Execute Exercise
                                </a>
                                <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot + `/docs`} class="flex items-center gap-2 px-4 py-2 text-sm text-foreground hover:bg-accent transition-colors">
                                    <FileText class="w-4 h-4" />
                                    API Documentation
                                </a>
                                <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot + `/generate`} class="flex items-center gap-2 px-4 py-2 text-sm text-foreground hover:bg-accent transition-colors">
                                    <Link class="w-4 h-4" />
                                    Generate URL
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="mobileMenuButton" class="p-2 rounded-md text-muted-foreground hover:text-foreground hover:bg-accent transition-colors">
                    <Menu id="menuIcon" class="w-5 h-5" />
                    <X id="closeIcon" class="w-5 h-5 hidden" />
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="md:hidden hidden border-t border-border py-4">
            <div class="space-y-2">
                {exercisesList.map((ex) => (
                    <div class="space-y-1" id={ex.id}>
                        <div class="px-3 py-2 text-sm font-semibold text-foreground">
                            {ex.title}
                        </div>
                        <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot} class="flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
                            <ex.icon class="w-4 h-4" />
                            Execute Exercise
                        </a>
                        <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot + `/docs`} class="flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
                            <FileText class="w-4 h-4" />
                            API Documentation
                        </a>
                        <a href={(process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : "") + ex.pathWithoutDot + `/generate`} class="flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
                            <Link class="w-4 h-4" />
                            Generate URL
                        </a>
                    </div>
                ))}

                <hr class="h-0.5 border-t-0 bg-border" />

                <!-- Home Link -->
                <a href={`${process.env.GITHUB_PAGES ? import.meta.env.BASE_URL : ""}/`} class="flex items-center gap-2 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-accent rounded-md transition-colors">
                    <Home class="w-4 h-4" />
                    Home
                </a>
            </div>
        </div>
    </div>
</nav>

<script is:inline>
    // Mobile menu functionality
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        const menuIcon = document.getElementById('menuIcon');
        const closeIcon = document.getElementById('closeIcon');

        if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
            mobileMenuButton.addEventListener('click', () => {
                const isHidden = mobileMenu.classList.contains('hidden');
                if (isHidden) {
                    mobileMenu.classList.remove('hidden');
                    menuIcon.classList.add('hidden');
                    closeIcon.classList.remove('hidden');
                } else {
                    mobileMenu.classList.add('hidden');
                    menuIcon.classList.remove('hidden');
                    closeIcon.classList.add('hidden');
                }
            });
        }

        // Close mobile menu when clicking on a link
        const mobileLinks = mobileMenu?.querySelectorAll('a');
        mobileLinks?.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
                menuIcon.classList.remove('hidden');
                closeIcon.classList.add('hidden');
            });
        });
    });
</script>

<style is:inline>
    /* Smooth transitions for dropdown */
    .group:hover .group-hover\:visible {
        visibility: visible;
    }

    .group:hover .group-hover\:opacity-100 {
        opacity: 1;
    }

    /* Ensure dropdown appears above other content */
    .relative > div {
        z-index: 50;
    }
</style>